<h3>Charges</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.created_at.to_date %></td>
        <td><%= number_to_currency charge.amount / 100 %></td>
        <td><%= link_to "Download", "#" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
