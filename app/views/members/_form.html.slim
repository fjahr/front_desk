= form_for(member) do |f|
  - if member.errors.any?
    #error_explanation
      h2
        = pluralize(member.errors.count, "error")
        | prohibited this member from being saved:
      ul
        - member.errors.full_messages.each do |message|
          li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :slack_id
    = f.text_field :slack_id
  = f.fields_for :aliases do |a|
    .field
      = a.label :aliases_split_by_comma
      = a.text_field :name
  .actions
    = f.submit
