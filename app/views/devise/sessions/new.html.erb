<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>
  <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control" %>

  <div class="checkbox">
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  </div>

  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
<% end %>
